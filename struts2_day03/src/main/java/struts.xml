<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
    <!--
    开启ongl静态方法访问
    D:\workspace_for_idea\Struts2\struts2_day03\web\WEB-INF\lib\struts2-core-2.3.24.jar!\org\apache\struts2\default.properties
    -->
    <constant name="struts.ognl.allowStaticMethodAccess" value="true"></constant>

    <package name="showvs" namespace="/" extends="struts-default" >
        <action name="Demo2Action" class="cn.itheima.c_param.Demo2Action" method="execute" >
            <result name="success" type="dispatcher" >/success.jsp</result>
        </action>

        <!-- 获取值栈对象 -->
        <action name="vs1" class="cn.itheima.action.ValueStack1Action"/>

        <!-- 向值栈中存值，方式一 -->
        <action name="test" class="cn.itheima.action.ValueStack1Action" method="test">
            <result name="success">/success.jsp</result>
        </action>

        <!-- 向值栈中存值，方式二 -->
        <action name="test2" class="cn.itheima.action.ValueStack1Action" method="test2">
            <result name="success">/success.jsp</result>
        </action>

        <!-- 从值栈中获取值 -->
        <action name="save" class="cn.itheima.action.ValueStack1Action" method="save">
            <result name="success">/demo2/vs.jsp</result>
        </action>

        <action name="Demo3Action" class="cn.itheima.d_config.Demo3Action" method="execute" >
            <result name="success" type="redirectAction" >
                <param name="actionName">Demo1Action</param>
                <param name="namespace">/</param>
                <!-- 如果添加的参数struts"看不懂"，就会作为参数附加重定向的路径之后。如果参数是动态的.可以使用${}包裹ognl表达式.动态取值 -->
                <param name="name">${name}</param>
            </result>
        </action>
    </package>
</struts>